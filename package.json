{
  "name": "mt2-server-javascript",
  "version": "1.0.0",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "dev:auth": "cross-env LOG_LEVEL=debug tsnd -r tsconfig-paths/register --transpile-only --respawn --ignore-watch node_modules --watch src/auth --env-file=.env src/auth/main.ts",
    "dev:game": "cross-env LOG_LEVEL=debug tsnd -r tsconfig-paths/register --transpile-only --respawn --ignore-watch node_modules --watch src/game --env-file=.env src/game/main.ts",
    "auth": "node --env-file=.env dist/auth/main.js",
    "game": "node --env-file=.env dist/game/main.js",
    "migrate": "cross-env tsnd -r tsconfig-paths/register --env-file=.env tools/database/migrate.ts",
    "format": "prettier -w {src,test}/**/*.ts",
    "prepare": "husky",
    "lint:fix": "eslint --fix {src,test}/**/*.ts",
    "test:unit": "mocha -r tsconfig-paths/register --config test/.mocharc.unit.json --exit",
    "test:integration": "node --env-file=.env --experimental-json-modules node_modules/mocha/bin/mocha --config test/.mocharc.integration.json --exit",
    "test:performance": "node --env-file=.env --experimental-json-modules test/performance/index.js",
    "test:coverage": "c8 npm run test:unit",
    "docker:all": "docker-compose -f docker-compose.yml up -d",
    "docker:dep": "docker-compose -f docker-compose.dep.yml up -d",
    "generate:doc": "node tools/doc/docGenerator.js",
    "build": "tsc -p tsconfig.build.json && tsc-alias"
  },
  "author": "Willian Marques (willian.goncalves4@gmail.com)",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/chai": "^5.0.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.10.2",
    "@types/sinon": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.1",
    "c8": "^10.1.2",
    "chai": "^5.1.1",
    "eslint": "^9.17.0",
    "expectations": "^1.0.0",
    "globals": "^15.13.0",
    "husky": "^9.0.11",
    "mocha": "^10.4.0",
    "nyc": "^17.0.0",
    "prettier": "^3.2.5",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.18.1"
  },
  "dependencies": {
    "awilix": "^10.0.2",
    "bcryptjs": "^2.4.3",
    "cross-env": "^7.0.3",
    "mysql2": "^3.9.7",
    "redis": "^4.7.0",
    "sinon": "^18.0.0",
    "winston": "^3.13.0"
  },
  "mocha": {
    "require": "expectations"
  }
}
