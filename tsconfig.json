{
  "compilerOptions": {
    "resolveJsonModule": true,
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "ES6",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src", "test"],
  "exclude": [],
  "types": ["node", "mocha"]
}
